<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/MatchMatch"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen100"
        android:paddingRight="@dimen/dimen15"
        android:paddingLeft="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen10">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="@dimen/dimen120"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_colorimage"
               style="@style/MatchMatch"/>
            <LinearLayout
                style="@style/WrapWrap"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">
                <LinearLayout
                    style="@style/WrapWrap"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/WrapWrap"
                        android:text="ï¿¥"
                        android:textColor="@color/whiteColors"
                        android:textSize="@dimen/textsize14"/>
                    <TextView
                        android:id="@+id/tv_redpacketnum"
                        style="@style/WrapWrap"
                        android:textColor="@color/whiteColors"
                        android:textSize="@dimen/textsize40"
                        android:singleLine="true"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_useconditions"
                    style="@style/WrapWrap"
                    android:textColor="@color/whiteColors"
                    android:textSize="@dimen/dimen12"
                    android:layout_marginTop="@dimen/dimen12"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/MatchMatch"
            android:layout_toRightOf="@id/rl_left"
            android:paddingLeft="@dimen/dimen13"
            android:paddingTop="@dimen/dimen14"
            android:background="@color/whiteColors">
            <TextView
                android:id="@+id/tv_couponstype"
                style="@style/WrapWrap"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize15"
                android:singleLine="true"
                android:ellipsize="end"/>
            <LinearLayout
                android:id="@+id/ll_expirydate"
                style="@style/WrapWrap"
                android:orientation="horizontal"
                android:layout_below="@id/tv_couponstype"
                android:layout_marginTop="@dimen/dimen12">
                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/expiryDate"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize11"/>
                <TextView
                    android:id="@+id/tv_expirydate"
                    style="@style/WrapWrap"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize11"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_couponsexplain"
                style="@style/WrapWrap"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize11"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@id/ll_expirydate"
                android:layout_marginTop="@dimen/dimen12"/>
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dimen70"
                android:layout_height="@dimen/dimen70"
                android:src="@mipmap/mine_yishiyongxxx"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen12"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>