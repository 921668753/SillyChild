<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dimen15"
    android:paddingRight="@dimen/dimen15"
    android:background="@color/whiteColors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen111"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            style="@style/WrapWrap"
            android:src="@mipmap/default_image"/>

        <LinearLayout
            style="@style/AutoWrap"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen15">
            <TextView
                style="@style/WrapWrap"
                android:id="@+id/tv_goodname"
                android:text="纪梵希Givenchy禁忌之吻口红"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14"
                android:singleLine="true"
                android:ellipsize="end"/>
            <LinearLayout
                style="@style/MatchWrap"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_gooddetail"
                    style="@style/AutoMatch"
                    android:text="漆光唇膏黑色口红"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/hintColors"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <ImageView
                    android:layout_width="@dimen/dimen18"
                    android:layout_height="@dimen/dimen18"
                    android:src="@mipmap/mineaddress_deletexxx"
                    android:layout_marginLeft="@dimen/dimen15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen25"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen20">
                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/moneySign"
                    android:textSize="@dimen/textsize15"
                    android:textColor="@color/redColors"/>
                <TextView
                    android:id="@+id/tv_goodprice"
                    style="@style/AutoWrap"
                    android:text="429"
                    android:textSize="@dimen/textsize15"
                    android:textColor="@color/redColors"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv_addcarte"
                    android:layout_width="@dimen/dimen90"
                    android:layout_height="@dimen/dimen25"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_addshoppingcarte"
                    android:gravity="center"
                    android:text="@string/addShoppingCart"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize13"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1"
        android:background="@color/longinotherdividerbg"/>

</LinearLayout>