<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/include_fangwei"
        layout="@layout/common_title" />

    <View
        android:id="@+id/view_topdivider"
        style="@style/DividerWidth"
        android:layout_below="@id/include_fangwei" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen49"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteColors"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/AutoMatch"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Image20"
                android:scaleType="fitXY"
                android:src="@mipmap/mallcart_shopxxx" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen5"
                android:text="@string/shop"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize11" />
        </LinearLayout>


        <LinearLayout
            style="@style/AutoMatch"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Image20"
                android:scaleType="fitXY"
                android:src="@mipmap/mallkefuxxx" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen5"
                android:text="@string/customerService"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize11" />
        </LinearLayout>

        <LinearLayout
            style="@style/AutoMatch"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/Image20"
                android:scaleType="fitXY"
                android:src="@mipmap/mallguanzhuxxx" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dimen5"
                android:text="@string/follow"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize11" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/red"
            android:gravity="center"
            android:text="@string/buyNow"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/redColors"
            android:gravity="center"
            android:text="@string/addShoppingCart"
            android:textColor="@color/whiteColors"
            android:textSize="@dimen/textsize14" />
    </LinearLayout>

    <View
        android:id="@+id/divider_bottom"
        style="@style/DividerWidth"
        android:layout_above="@id/ll_bottom" />

    <com.common.cklibrary.utils.myview.WebViewLayout1
        android:id="@+id/web_content"
        style="@style/MatchMatch"
        android:layout_above="@id/divider_bottom"
        android:layout_below="@id/view_topdivider"
        android:scrollbars="none" />


</RelativeLayout>