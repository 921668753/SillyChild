<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen45"
    android:background="@color/top_bar_normal_bg"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="@dimen/dimen39"
        android:layout_height="match_parent"
        android:background="@drawable/hd_common_tab_bg"
        android:clickable="true">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/dimen16"
            android:layout_height="@dimen/dimen16"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen39"
        android:layout_toRightOf="@+id/left_layout"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize17" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/dimen39"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/hd_common_tab_bg">

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/dimen17"
            android:layout_height="@dimen/dimen17"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
    </RelativeLayout>

</RelativeLayout>