<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/background">

    <include layout="@layout/common_title"/>

    <View style="@style/DividerWidth"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen72"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen24"
        android:background="@color/whiteColors">
        <TextView
            style="@style/WrapWrap"
            android:text="@string/yourAccount"/>
        <EditText
            android:id="@+id/et_phone"
            style="@style/MatchMatch"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:paddingLeft="@dimen/dimen23"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize24"/>
    </LinearLayout>

    <View style="@style/DividerWidth"/>

    <RelativeLayout
        style="@style/MatchMatch">
        <ScrollView
            style="@style/MatchMatch">
            <LinearLayout
                style="@style/MatchMatch"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/MatchWrap"
                    android:paddingBottom="@dimen/dimen14"
                    android:paddingTop="@dimen/dimen14"
                    android:orientation="horizontal"
                    android:background="@color/whiteColors">
                    <LinearLayout
                        style="@style/AutoWrap"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/btn_leftup"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money100"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>
                        <Button
                            android:id="@+id/btn_leftmiddle"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money500"
                            android:layout_marginTop="@dimen/dimen18"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>
                        <Button
                            android:id="@+id/btn_leftdown"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money3000"
                            android:layout_marginTop="@dimen/dimen18"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AutoWrap"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/btn_middleup"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money200"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/whiteColors"
                            android:background="@drawable/shape_login1"/>

                        <Button
                            android:id="@+id/btn_middlemiddle"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money1000"
                            android:layout_marginTop="@dimen/dimen18"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>

                        <Button
                            android:id="@+id/btn_middledown"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:layout_marginTop="@dimen/dimen18"
                            android:text="@string/money5000"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize16"
                            android:background="@drawable/shape_addshoppingcarte" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/AutoWrap"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <Button
                            android:id="@+id/btn_rightup"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money300"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>
                        <Button
                            android:id="@+id/btn_rightmiddle"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:text="@string/money2000"
                            android:layout_marginTop="@dimen/dimen18"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"/>

                        <LinearLayout
                            style="@style/WrapWrap"
                            android:focusable="true"
                            android:focusableInTouchMode="true"></LinearLayout>

                        <EditText
                            android:id="@+id/et_rightdown"
                            android:layout_width="@dimen/dimen101"
                            android:layout_height="@dimen/dimen43"
                            android:hint="@string/moneyOther"
                            android:textColorHint="@color/hintColors"
                            android:layout_marginTop="@dimen/dimen18"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/textColor"
                            android:background="@drawable/shape_addshoppingcarte"
                            android:gravity="center"
                            android:inputType="number|numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dimen13"
                    android:background="@color/whiteColors">
                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/optionPay"
                        android:textColor="@color/hintColors"
                        android:textSize="@dimen/textsize14"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginTop="@dimen/dimen12"
                        android:layout_marginBottom="@dimen/dimen5"/>
                    <LinearLayout
                        android:id="@+id/ll_payweixin"
                        style="@style/MatchWrap"
                        android:background="@color/whiteColors"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginBottom="@dimen/dimen13"
                            android:layout_marginLeft="@dimen/dimen15"
                            android:layout_marginTop="@dimen/dimen13"
                            android:src="@mipmap/weixin_payxxx" />


                        <TextView
                            style="@style/AutoWrap"
                            android:paddingLeft="@dimen/dimen12"
                            android:text="@string/weChatPay"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize15" />

                        <ImageView
                            android:id="@+id/iv_payweixin"
                            android:layout_width="@dimen/dimen23"
                            android:layout_height="@dimen/dimen23"
                            android:src="@mipmap/mineaddress_selectxxx"
                            android:layout_marginRight="@dimen/dimen14"/>

                    </LinearLayout>


                    <include layout="@layout/common_dividerwidth1" />

                    <LinearLayout
                        android:id="@+id/ll_payzfb"
                        style="@style/MatchWrap"
                        android:background="@color/whiteColors"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen30"
                            android:layout_height="@dimen/dimen30"
                            android:layout_marginBottom="@dimen/dimen13"
                            android:layout_marginLeft="@dimen/dimen15"
                            android:layout_marginTop="@dimen/dimen13"
                            android:src="@mipmap/mine_zfbxxx" />


                        <TextView
                            style="@style/AutoWrap"
                            android:paddingLeft="@dimen/dimen12"
                            android:text="@string/alipayToPay"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize15" />

                        <ImageView
                            android:id="@+id/iv_payzfb"
                            android:layout_width="@dimen/dimen23"
                            android:layout_height="@dimen/dimen23"
                            android:src="@mipmap/mineaddress_unselectxxx"
                            android:layout_marginRight="@dimen/dimen14" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen61"
            android:orientation="vertical"
            android:background="@color/whiteColors"
            android:layout_alignParentBottom="true">

            <View style="@style/DividerWidth"/>

                <TextView
                    android:id="@+id/tv_determinepay"
                    style="@style/MatchMatch"
                    android:background="@drawable/shape_login1"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen15"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:text="@string/determinePay"
                    android:textColor="@color/whiteColors"
                    android:textSize="@dimen/textsize16"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>