<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View style="@style/DividerWidth" />

    <ScrollView style="@style/MatchAuto">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <TextView
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10"
                android:text="@string/rechargeAmount"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize14" />

            <View style="@style/DividerWidth" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen10">

                <LinearLayout
                    style="@style/AutoWrap"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_leftup"
                        style="@style/Match58"
                        android:background="@color/loginBackgroundColors"
                        android:gravity="center"
                        android:text="@string/money100"
                        android:textColor="@color/whiteColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/btn_leftmiddle"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money500"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/btn_leftdown"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money3000"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/AutoWrap"
                    android:layout_marginLeft="@dimen/dimen30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_middleup"
                        style="@style/Match58"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money200"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/btn_middlemiddle"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money1000"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/btn_middledown"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money5000"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/AutoWrap"
                    android:layout_marginLeft="@dimen/dimen30"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_rightup"
                        style="@style/Match58"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money300"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/btn_rightmiddle"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:text="@string/money2000"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                    <Button
                        android:id="@+id/et_rightdown"
                        style="@style/Match58"
                        android:layout_marginTop="@dimen/dimen25"
                        android:background="@drawable/shape_rechargeunselected"
                        android:gravity="center"
                        android:text="@string/moneyOther"
                        android:textColor="@color/loginBackgroundColors"
                        android:textSize="@dimen/textsize15" />

                </LinearLayout>
            </LinearLayout>

            <EditText
                style="@style/Match45"
                android:background="@color/whiteColors"
                android:hint="@string/aboutMe"
                android:inputType="number|numberDecimal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:textColor="@color/titletextcolors"
                android:textSize="@dimen/textsize15" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dimen13"
                android:background="@color/whiteColors"
                android:orientation="vertical">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen12"
                    android:text="@string/optionPay"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize14" />

                <LinearLayout
                    android:id="@+id/ll_payweixin"
                    style="@style/MatchWrap"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen30"
                        android:layout_height="@dimen/dimen30"
                        android:layout_marginBottom="@dimen/dimen13"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginTop="@dimen/dimen13"
                        android:src="@mipmap/weixin_payxxx" />

                    <TextView
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen12"
                        android:text="@string/weChatPay"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize15" />

                    <ImageView
                        android:id="@+id/iv_payweixin"
                        android:layout_width="@dimen/dimen23"
                        android:layout_height="@dimen/dimen23"
                        android:layout_marginRight="@dimen/dimen14"
                        android:src="@mipmap/mineaddress_selectxxx" />

                </LinearLayout>


                <include layout="@layout/common_dividerwidth1" />

                <LinearLayout
                    android:id="@+id/ll_payzfb"
                    style="@style/MatchWrap"
                    android:background="@color/whiteColors"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen30"
                        android:layout_height="@dimen/dimen30"
                        android:layout_marginBottom="@dimen/dimen13"
                        android:layout_marginLeft="@dimen/dimen15"
                        android:layout_marginTop="@dimen/dimen13"
                        android:src="@mipmap/mine_zfbxxx" />


                    <TextView
                        style="@style/AutoWrap"
                        android:paddingLeft="@dimen/dimen12"
                        android:text="@string/alipayToPay"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize15" />

                    <ImageView
                        android:id="@+id/iv_payzfb"
                        android:layout_width="@dimen/dimen23"
                        android:layout_height="@dimen/dimen23"
                        android:layout_marginRight="@dimen/dimen14"
                        android:src="@mipmap/mineaddress_unselectxxx" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_determinepay"
                style="@style/Match44"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@drawable/shape_login1"
                android:gravity="center"
                android:text="@string/determinePay"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize16" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>