<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_allactivity"
    android:orientation="vertical"
    style="@style/MatchMatch"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <include layout="@layout/common_title"/>

    <View
        style="@style/DividerWidth"/>

    <ScrollView
        style="@style/MatchMatch">
        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="vertical">
            <LinearLayout
                style="@style/MatchWrap"
                android:orientation="vertical"
                android:background="@color/whiteColors"
                android:padding="@dimen/dimen10">
                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/feedbackType"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15"
                    android:layout_marginTop="@dimen/dimen15"
                    android:layout_marginLeft="@dimen/dimen5"/>

                <com.common.cklibrary.utils.myview.NoScrollGridView
                    android:id="@+id/noscrollgridview"
                    style="@style/MatchWrap"
                    android:verticalSpacing="@dimen/dimen5"
                    android:horizontalSpacing="@dimen/dimen5"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    tools:listitem="@layout/item_feedback_type"
                    android:layout_marginTop="@dimen/dimen13"
                    android:layout_marginBottom="@dimen/dimen10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen200">
                    <EditText
                        android:id="@+id/tv_feed"
                        style="@style/MatchMatch"
                        android:background="@drawable/shape_addshoppingcarte"
                        android:paddingLeft="@dimen/dimen16"
                        android:paddingRight="@dimen/dimen16"
                        android:paddingTop="@dimen/dimen14"
                        android:paddingBottom="@dimen/dimen14"
                        android:hint="@string/pleaseFillIn"
                        android:textColorHint="@color/hintColors"
                        android:gravity="start"
                        android:textSize="@dimen/textsize14"
                        android:textColor="@color/textColor"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scrollbars="none"/>
                    <LinearLayout
                        style="@style/WrapWrap"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dimen15"
                        android:layout_marginBottom="@dimen/dimen13">
                        <TextView
                            android:id="@+id/tv_currentwords"
                            style="@style/WrapWrap"
                            android:text="0/"
                            android:textColor="@color/hintColors"
                            android:textSize="@dimen/textsize12"/>
                        <TextView
                            android:id="@+id/tv_wordLimit"
                            style="@style/WrapWrap"
                            android:text="@string/wordLimit"
                            android:textColor="@color/hintColors"
                            android:textSize="@dimen/textsize12"/>
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:listSelector="@android:color/transparent"
                    android:scrollbarStyle="outsideOverlay"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/item_chooseimage"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginBottom="@dimen/dimen5"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvbtn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45"
                android:background="@drawable/shape_login1"
                android:text="@string/submit"
                android:textColor="@color/whiteColors"
                android:textSize="@dimen/textsize16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen25"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginBottom="@dimen/dimen45"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>