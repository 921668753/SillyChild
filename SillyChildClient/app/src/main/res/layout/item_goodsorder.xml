<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchMatch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <View style="@style/DividerWidth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen44"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/orderNumber"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize13" />

            <TextView
                android:id="@+id/tv_good_code"
                style="@style/AutoWrap"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize13" />

            <TextView
                android:id="@+id/tv_good_status"
                style="@style/WrapWrap"
                android:textColor="@color/guideShapeColors"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen105"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <HorizontalScrollView
                android:id="@+id/hsv_goodpic"
                style="@style/MatchWrap"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:scrollbars="none"
                android:visibility="gone">

                <ListView
                    android:id="@+id/lv_goodpic"
                    style="@style/MatchWrap"
                    android:dividerHeight="@dimen/dimen10"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    tools:listitem="@layout/item_goodsorder_images" />
            </HorizontalScrollView>


            <RelativeLayout
                android:id="@+id/rl_good"
                style="@style/MatchMatch">

                <ImageView
                    android:id="@+id/iv_goodsicon"
                    android:layout_width="@dimen/dimen81"
                    android:layout_height="@dimen/dimen81"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/placeholderfigure1" />

                <LinearLayout
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:layout_toRightOf="@id/iv_goodsicon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_good_title"
                        style="@style/WrapWrap"
                        android:maxLines="2"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_good_describe"
                        style="@style/WrapWrap"
                        android:layout_marginTop="@dimen/dimen18"
                        android:singleLine="true"
                        android:textColor="@color/hintColors"
                        android:textSize="@dimen/textsize12" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen35"
            android:background="@color/whiteColors"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                android:id="@+id/tv_good_datetime"
                style="@style/WrapWrap"
                android:textColor="@color/hintColors"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                style="@style/AutoWrap"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/totalOnlyWord"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_good_num"
                    style="@style/WrapWrap"
                    android:maxEms="3"
                    android:paddingLeft="@dimen/dimen3"
                    android:paddingRight="@dimen/dimen3"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/goods"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen15"
                    android:text="@string/actualPaymentInCart"
                    android:textColor="@color/hintColors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_good_paymoney"
                    style="@style/WrapWrap"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/common_dividerwidth1" />

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/whiteColors"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_leftbtn"
                android:layout_width="@dimen/dimen75"
                android:layout_height="@dimen/dimen30"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@drawable/shape_code1"
                android:gravity="center"
                android:text="@string/payment"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize13" />

            <TextView
                android:id="@+id/tv_rightbtn"
                android:layout_width="@dimen/dimen75"
                android:layout_height="@dimen/dimen30"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen15"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@drawable/shape_guidelabels"
                android:gravity="center"
                android:text="@string/payment"
                android:textColor="@color/guideShapeColors"
                android:textSize="@dimen/textsize13" />
        </LinearLayout>

        <View style="@style/DividerWidth" />
    </LinearLayout>

</RelativeLayout>