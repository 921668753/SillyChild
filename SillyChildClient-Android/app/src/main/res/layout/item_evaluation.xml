<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="vertical"
    android:padding="@dimen/dimen15">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen35"
            android:layout_height="@dimen/dimen35"
            android:src="@mipmap/placeholderfigure1" />

        <TextView
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen5"
            android:singleLine="true"
            android:textColor="@color/tabColors"
            android:textSize="@dimen/textsize13" />

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen10"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize11" />

    </LinearLayout>

    <TextView
        style="@style/MatchWrap"
        android:layout_marginBottom="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen10"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen13" />

    <HorizontalScrollView
        style="@style/MatchWrap"
        android:layout_marginBottom="@dimen/dimen10"
        android:scrollbars="none">

        <com.common.cklibrary.utils.myview.ChildLiistView
            style="@style/WrapWrap"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dimen15"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_evaluationpictures">

        </com.common.cklibrary.utils.myview.ChildLiistView>
    </HorizontalScrollView>

    <TextView
        style="@style/WrapWrap"
        android:layout_marginBottom="@dimen/dimen10"
        android:text="@string/additionalReview"
        android:textColor="@color/blueColors"
        android:textSize="@dimen/textsize12" />

    <TextView
        style="@style/WrapWrap"
        android:layout_marginBottom="@dimen/dimen14"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize13" />

    <LinearLayout
        style="@style/WrapWrap"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/textsize15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen15"
            android:layout_height="@dimen/dimen15"
            android:src="@mipmap/mallhuifuxxx" />

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen8"
            android:text="@string/revert"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

</LinearLayout>