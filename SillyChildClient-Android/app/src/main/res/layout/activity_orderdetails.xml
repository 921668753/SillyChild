<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"/>

    <ScrollView style="@style/MatchAuto">

        <LinearLayout
            style="@style/MatchMatch"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen75"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/orderNumberThreeWord"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_ordercode"
                        style="@style/AutoWrap"
                        android:singleLine="true"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_ordertype"
                        style="@style/WrapWrap"
                        android:gravity="right"
                        android:textColor="@color/guideShapeColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/dimen15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/orderTime"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:id="@+id/tv_orderdatetime"
                        style="@style/WrapWrap"
                        android:singleLine="true"
                        android:textColor="@color/tabColors"
                        android:textSize="@dimen/textsize15" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/DividerWidth" />

            <View
                style="@style/DividerWidth"
                android:layout_marginTop="@dimen/dimen10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen78"
                android:background="@color/whiteColors"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen10">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen18"
                    android:src="@mipmap/mineicon_locationxxx" />

                <LinearLayout
                    style="@style/AutoMatch"
                    android:layout_marginLeft="@dimen/dimen12"
                    android:layout_marginRight="@dimen/dimen12"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen18"
                    android:paddingTop="@dimen/dimen18">

                    <LinearLayout
                        style="@style/WrapAuto"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_tagpersonname"
                            style="@style/WrapWrap"
                            android:singleLine="true"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize16" />

                        <TextView
                            android:id="@+id/tv_tagpersonphone"
                            style="@style/WrapWrap"
                            android:layout_marginLeft="@dimen/dimen12"
                            android:singleLine="true"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textsize16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_tagpersonaddress"
                        style="@style/WrapWrap"
                        android:singleLine="true"
                        android:textColor="@color/hintColors"
                        android:textSize="@dimen/textsize13" />
                </LinearLayout>

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/minearrowxxx" />
            </LinearLayout>

            <View
                style="@style/MatchWrap"
                android:background="@mipmap/minerefund_envelope_icxxx" />

            <View
                style="@style/DividerWidth"
                android:layout_marginTop="@dimen/dimen10" />

            <com.common.cklibrary.utils.myview.ChildLiistView
                android:id="@+id/lv_shopgoods"
                style="@style/MatchWrap"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:listitem="@layout/item_shopgoodsup" />

            <View style="@style/DividerWidth" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/modePayment"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/dimen15" />

                <TextView
                    android:id="@+id/tv_paytype"
                    style="@style/WrapWrap"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/dimen15" />
            </LinearLayout>

            <View style="@style/DividerWidth" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen30"
                android:background="@color/whiteColors"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/goodsTotal"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/dimen15" />

                <TextView
                    android:id="@+id/tv_goodsmoney"
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/dimen15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45"
                android:background="@color/whiteColors"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:paddingTop="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/freight"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/dimen15" />

                <TextView
                    android:id="@+id/tv_freightmoney"
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/dimen15" />
            </LinearLayout>

            <include layout="@layout/common_dividerwidth1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45"
                android:layout_marginBottom="@dimen/dimen15"
                android:background="@color/whiteColors"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/actualPaymentThreeWord"
                    android:textColor="@color/tabColors"
                    android:textSize="@dimen/dimen15" />

                <TextView
                    android:id="@+id/tv_paymoney"
                    style="@style/AutoWrap"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/redColors"
                    android:textSize="@dimen/dimen15" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        style="@style/DividerWidth"/>

    <View
        style="@style/DividerWidth"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/dimen15"
        android:background="@color/whiteColors">

        <TextView
            android:id="@+id/tv_leftbtn"
            android:layout_width="@dimen/dimen88"
            android:layout_height="@dimen/dimen32"
            android:background="@drawable/shape_code1"
            android:text="@string/applyAfterSales"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize14"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_rightbtn"
            android:layout_width="@dimen/dimen88"
            android:layout_height="@dimen/dimen32"
            android:background="@drawable/shape_guidelabels"
            android:text="@string/payment"
            android:textColor="@color/guideShapeColors"
            android:textSize="@dimen/textsize16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen15"/>
    </LinearLayout>

</LinearLayout>