<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10">

        <TextView
            android:id="@+id/textView6"
            style="@style/AutoMatch"
            android:layout_marginBottom="@dimen/dimen10"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/shape_code"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/greenColors"
            android:textSize="@dimen/textsize12" />


        <TextView
            style="@style/AutoMatch"
            android:layout_marginBottom="@dimen/dimen10"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/shape_code1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize12" />

        <TextView
            style="@style/AutoMatch"
            android:layout_marginBottom="@dimen/dimen10"
            android:layout_marginLeft="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/shape_code1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mRefreshLayout"
        style="@style/MatchMatch">

        <ListView
            android:id="@+id/lv_evaluation"
            style="@style/MatchMatch"
            android:divider="@color/dividercolors"
            android:dividerHeight="@dimen/dimen1"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_evaluation" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <include layout="@layout/common_error"></include>

</LinearLayout>